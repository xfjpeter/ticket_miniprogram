page {
  background-color: #f3f3f3;
}

.info {
  font-size: 24rpx;
  background-color: #fff;
  color: #555;
  padding: 8px;
  border-bottom: 2rpx solid #ddd;
}

.info .title {
  font-size: 32rpx;
  color: #333;
}

.bottom {
  font-size: 24rpx;
  background-color: #fff;
  color: #555;
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
}

.bottom .check {
  margin: 8px;
}

.bottom .check view {
  color: #333;
}

.bottom .check .tag {
  position: relative;
  font-size: 24rpx;
  color: #555;
  border: 1px solid #ddd;
  margin: 10rpx 10rpx 10rpx 0;
  display: inline-block;
  width: 120rpx;
  padding: 14rpx 8rpx 14rpx 4rpx;
}

.bottom .check .tag van-icon {
  position: absolute;
  top: 20rpx;
  right: 4rpx;
}

.site {
  position: relative;
}

.table {
  font-size: 28rpx;
  background: #f5f5f5;
  border-right: none;
}

.tr {
  display: flex;
  justify-content: space-between;
}

.td {
  text-align: center;
  display: inline-block;
  border-left: none;
  border-bottom: none;
  padding: 10rpx 1%;
  width: 12%;
}

.td-bar {
  font-size: 24rpx;
  display: block;
  padding: 0;
  line-height: 70rpx;
  background: #cfcfcf;
  width: 40rpx;
  height: 100%;
  color: #fff;
}

.thead .td {
  border-top: none;
  height: 140rpx;
  line-height: 50rpx;
}

/* 座位*/

.seat {
  width: 48rpx;
  height: 48rpx;
}

/*提示信息 */

.tips {
  text-align: center;
  font-size: 25rpx;
  margin-top: 20rpx;
}

.tipImg {
  width: 48rpx;
  height: 48rpx;
  margin-left: 15rpx;
}
